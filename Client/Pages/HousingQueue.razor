@page "/housingQueue"
@using System.ComponentModel.DataAnnotations

<PageTitle>Bostadskö</PageTitle>

<div class="card-container">
    <h1 class="form-header">Registrera dig i bostadskön</h1>

    <p class="form-paragraph">
        Fyll i formuläret nedan för att ställa dig i bostadskön. Vi kontaktar dig så snart en lägenhet blir tillgänglig.
    </p>

    <EditForm Model="bostadskoModel" OnValidSubmit="SubmitBostadsko">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="name">Ditt namn</label>
            <InputText id="name" class="form-control" @bind-Value="bostadskoModel.Name" placeholder="Ditt namn..." />
        </div>

        <div class="form-group">
            <label for="email">Din e-post</label>
            <InputText id="email" class="form-control" @bind-Value="bostadskoModel.Email" placeholder="Din e-post..." />
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <label for="phone">Telefonnummer</label>
            <InputText id="phone" class="form-control" @bind-Value="bostadskoModel.Phone" placeholder="Ditt telefonnummer..." />
        </div>

        <div class="form-group">
            <label for="apartmentSize">Önskad storlek på lägenhet</label>
            <InputSelect id="apartmentSize" class="form-control" @bind-Value="bostadskoModel.ApartmentSize">
                <option value="">Välj storlek...</option>
                <option value="1">1 rum</option>
                <option value="2">2 rum</option>
                <option value="3">3 rum</option>
                <option value="4">4 rum eller större</option>
                <option value="Flexibel med storlek">Flexibel med storlek</option>
            </InputSelect>
        </div>

        <button type="submit" class="btn btn-primary submit-btn">Registrera dig</button>
    </EditForm>

    @if (isSubmitted)
    {
        <div class="alert alert-success" style="margin-top: 20px;">
            Tack för din registrering! Vi kommer att kontakta dig när en lägenhet blir tillgänglig.
        </div>
    }
</div>