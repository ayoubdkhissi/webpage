@page "/housingQueue"
@using System.ComponentModel.DataAnnotations

<PageTitle>Bostadskö</PageTitle>

<div style="max-width: 600px; margin: auto; padding: 20px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h1 style="text-align: center; color: #333;">Registrera dig i bostadskön</h1>

    <p style="font-size: 1.1em; color: #555; text-align: center;">
        Fyll i formuläret nedan för att ställa dig i bostadskön. Vi kontaktar dig så snart en lägenhet blir tillgänglig.
    </p>

    <EditForm Model="bostadskoModel" OnValidSubmit="SubmitBostadsko">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="name">Ditt namn</label>
            <InputText id="name" class="form-control" @bind-Value="bostadskoModel.Name" placeholder="Ditt namn..." />
        </div>

        <div class="form-group">
            <label for="email">Din e-post</label>
            <InputText id="email" class="form-control" @bind-Value="bostadskoModel.Email" placeholder="Din e-post..." />
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <label for="phone">Telefonnummer</label>
            <InputText id="phone" class="form-control" @bind-Value="bostadskoModel.Phone" placeholder="Ditt telefonnummer..." />
        </div>

        <div class="form-group">
            <label for="apartmentSize">Önskad storlek på lägenhet</label>
            <InputSelect id="apartmentSize" class="form-control" @bind-Value="bostadskoModel.ApartmentSize">
                <option value="">Välj storlek...</option>
                <option value="1">1 rum</option>
                <option value="2">2 rum</option>
                <option value="3">3 rum</option>
                <option value="4">4 rum eller större</option>
                <option value="Flexibel med storlek">Flexibel med storlek</option>
            </InputSelect>
        </div>

        <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 20px;">Registrera dig</button>
    </EditForm>

    @if (isSubmitted)
    {
        <div class="alert alert-success" style="margin-top: 20px;">
            Tack för din registrering! Vi kommer att kontakta dig när en lägenhet blir tillgänglig.
        </div>
    }
</div>

@code {
    private BostadskoModel bostadskoModel = new BostadskoModel();
    private bool isSubmitted = false;

    private void SubmitBostadsko()
    {
        // Här kan du lägga till kod för att hantera inlämning, t.ex. skicka till en server eller API
        isSubmitted = true;
    }

    public class BostadskoModel
    {
        [Required]
        public string Name { get; set; }

        [Required]
        [EmailAddress(ErrorMessage = "Ange en giltig e-postadress.")]
        public string Email { get; set; }

        [Phone(ErrorMessage = "Ange ett giltigt telefonnummer.")]
        public string Phone { get; set; }

        [Required(ErrorMessage = "Välj önskad lägenhetsstorlek.")]
        public string ApartmentSize { get; set; }
    }
}
